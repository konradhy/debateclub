import { StudyModeDebate } from "@/components/prep/StudyModeDebate";
import {
  Brain,
  Loader2,
  ChevronDown,
  ChevronUp,
  Heart,
  BookOpen,
  Zap,
  Target,
  ShieldAlert,
  ExternalLink,
  Eye,
  AlertTriangle,
  MessageSquare,
  FileSearch,
} from "lucide-react";
